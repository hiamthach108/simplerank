# Application Configuration
APP_NAME=simplerank
APP_VERSION=1.0.0
HTTP_HOST=localhost
HTTP_PORT=8080

# Cache Configuration
CACHE_DEFAULT_EXPIRE_TIME_SEC=3600
CACHE_CLEANUP_INTERVAL_HOUR=24

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# PostgreSQL Configuration
POSTGRES_CONNECTION_NAME=
POSTGRES_USERNAME=postgres
POSTGRES_PASSWORD=your_postgres_password
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DBNAME=simplerank
POSTGRES_SCHEMA=public
POSTGRES_MAX_IDLE_CONNECTION=5
POSTGRES_MAX_OPEN_CONNECTION=50
POSTGRES_MAX_LIFE_TIME=1800
POSTGRES_SSL=false

# ClickHouse Configuration (Optional)
CLICKHOUSE_HOST=localhost
CLICKHOUSE_PORT=9000
CLICKHOUSE_HTTP_PORT=8123
CLICKHOUSE_DB=simplerank
CLICKHOUSE_USER=default
CLICKHOUSE_PASSWORD=your_clickhouse_password

# Keycloak Configuration (Optional)
KEYCLOAK_URL=http://localhost:8000
KEYCLOAK_REALM=simplerank
KEYCLOAK_CLIENT_ID=simplerank-api
KEYCLOAK_CLIENT_SECRET=your_client_secret

# JWT Configuration (Optional)
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=3600

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
